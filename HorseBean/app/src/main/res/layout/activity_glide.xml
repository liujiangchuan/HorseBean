<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_glide_center"
        android:layout_width="@dimen/px150"
        android:layout_height="@dimen/px150"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/px40"
        android:background="@color/green"/>

    <ImageView
        android:id="@+id/iv_glide_top"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px200"
        android:layout_above="@id/iv_glide_center"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"/>

    <ImageView
        android:id="@+id/iv_glide_left"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px200"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_glide_center"
        android:background="@color/colorAccent"/>

    <ImageView
        android:id="@+id/iv_glide_bottom"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px200"
        android:layout_below="@id/iv_glide_center"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"/>

    <ImageView
        android:id="@+id/iv_glide_right"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px200"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_glide_center"
        android:background="@color/colorAccent"
        android:scaleType="fitXY"/>

</RelativeLayout>
